@using OSL.MobileAppService.Models
@model IEnumerable<OSL.MobileAppService.Models.User>

@{
    ViewBag.Title = "All Users";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<img src="http://i1378.photobucket.com/albums/ah104/christinedestiny/sackLunch_icon_zpssdqik6ew.png" height="250" width="250" align="middle">
        @Html.ActionLink("Unverified Users", "Unverified")

        <table name="db_book" border=" 1 | 0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id) <br />
                    </th>

                <th>
                    @Html.DisplayNameFor(model => model.Person_Name) <br />
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Verified)<br />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Admin)<br />
                </th>
			    <th>
                    @Html.DisplayNameFor(model => model.Recipient)<br />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)<br />
                </th>
    </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
          
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin)
            </td>
			<td>
                @Html.DisplayFor(modelItem => item.Recipient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | |
				@{
				    if (item.Status == UserStatus.Active) {
                        @Html.ActionLink("Deactivate", "Deactivate", new { id = item.Id })
    				} else {
                        @Html.ActionLink("Activate", "Activate", new { id = item.Id })
    				}
				}
            </td>
        </tr>
}
    </tbody>
</table>

