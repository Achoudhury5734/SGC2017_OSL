<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="OSL.Views.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <BoxView Color="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <Image VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Source="osl_feature.png"/>
            <BoxView Color="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <Button x:Name="btnLogin" Text="Log in / Register" Clicked="OnClickSignup" IsVisible="false" VerticalOptions="End" HorizontalOptions="FillAndExpand"/>
            <ActivityIndicator x:Name="activityIndicator" IsRunning="false"/>
            <BoxView Color="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <Button x:Name="btnLogout" Text="Logout" Clicked="OnClickLogout" IsVisible="false" VerticalOptions="End" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>